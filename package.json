    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "mongodb": "^3.1.8",
    "nodemailer": "^4.7.0",
    "supertest": "^3.3.0"
  },
  "devDependencies": {
    "eslint": "^5.8.0"
